{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/formulaire.css">{% endblock %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div    class="formulaire">
    {{form_start(formArticle)}}

    {{ form_row(formArticle.titre, {'attr': {'placeholder':"Titre"}} )}}
    {{ form_row(formArticle.contenu, {'attr': {'placeholder':"Ecrivez un Article"}} )}}
    {{ form_row(formArticle.image, {'attr': {'placeholder':"url de l'image"}} )}}

    <button type="submit" class="btn-sucess">Envoyer</button>

    {{form_end(formArticle)}}
    </div>

{% endblock %}