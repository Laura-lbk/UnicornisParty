{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div    class="form_container"
            style="width=100%;">
    {{form_start(formArticle)}}

    {{ form_row(formArticle.titre, {'attr': {'placeholder':"Titre"}} )}}
    {{ form_row(formArticle.contenu, {'attr': {'placeholder':"Ecrivez un Article"}} )}}
    {{ form_row(formArticle.image, {'attr': {'placeholder':"url de l'image"}} )}}

    <button type="submit" class="btn btn-sucess"
            style="background-color:#ffaaaa;
            color:#fff;
            width:10em;
            height: 3em;
            margin-left:45%">
    
    Envoyer</button>

    {{form_end(formArticle)}}
    </div>

{% endblock %}